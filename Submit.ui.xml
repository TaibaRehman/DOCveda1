<?xml version="1.0"?>

<!DOCTYPE UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ma="urn:import:gwt.material.design.addins.client" 
xmlns:m="urn:import:gwt.material.design.client.ui" 
xmlns:g="urn:import:com.google.gwt.user.client.ui" 
xmlns:ui="urn:ui:com.google.gwt.uibinder">

<ui:style>
.important {
	font-weight: bold;
	}
	.panel{
   background: url("log.png");
   background-size: 100%;
   padding: 0px !important;
   padding-top: 40% !important;
 }
 .fieldPanel{
   background: white;
   padding: 6%;
 }

 .rowAction{
  margin-top: 20px;
 }
 .login_demo{
   padding: 4%;
  background-size:cover;
           background-position:center;
           background-attachment:fixed;
 }
	

 </ui:style>


<g:HTMLPanel>
 <m:MaterialRow backgroundColor="TRANSPARENT" addStyleNames="{style.login_demo}">
  <m:MaterialColumn grid="s12 m8 l6" offset="l3" >
   <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
    <m:MaterialPanel addStyleNames="{style.fieldPanel}">
    <m:MaterialTitle title="LONG DATA" description="" ui:field="l" />
<m:MaterialTextBox ui:field="tb" label="Heading" /> 
 <m:MaterialPanel m:id="tt2" ui:field="img">
<m:MaterialRow addStyleNames="{style.rowAction}">
      <m:MaterialColumn grid="s12 m12 l6" >
      
      
      
      </m:MaterialColumn>
     </m:MaterialRow>
     </m:MaterialPanel>
<m:MaterialTextArea ui:field="t" label="Enter Here" resizeRule="AUTO"/> 
<m:MaterialColumn>
<m:MaterialButton text="Submit" waves="LIGHT" backgroundColor="RED" textColor="WHITE"  iconPosition="RIGHT" ui:field="button" title="Submit"/>
</m:MaterialColumn>
<m:MaterialColumn>
<m:MaterialButton text="EDIT" waves="LIGHT" backgroundColor="BLUE" textColor="WHITE"  iconPosition="LEFT" ui:field="b1" title="Edit"/>
</m:MaterialColumn>
<m:MaterialColumn>
<m:MaterialButton text="Update" waves="LIGHT" backgroundColor="GREEN" textColor="WHITE"  iconPosition="LEFT" ui:field="up" title="Update"/>
</m:MaterialColumn>
<g:VerticalPanel ui:field="v"/>
     <m:MaterialRow addStyleNames="{style.rowAction}">
      <m:MaterialColumn grid="s12 m12 l6">
      
       <m:MaterialButton title="Summarised Data" type="FLOATING" waves="LIGHT" size="LARGE" backgroundColor="RED" iconType="CHAT" ui:field="su" />
      
      </m:MaterialColumn>
     </m:MaterialRow>
    </m:MaterialPanel>
   </m:MaterialPanel>
  </m:MaterialColumn>
 </m:MaterialRow>

</g:HTMLPanel>
</ui:UiBinder>