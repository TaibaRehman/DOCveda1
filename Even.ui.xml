<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
    xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.panel{
   background: url("http://indiaenableexpo.com/wp-content/uploads/2017/02/banner2.jpg");
    background-size:100%;
    background-position:center;
   padding: 0px !important;
   padding-top: 40% !important;
   }
 .fieldPanel{
   background: white;
   padding: 6%;
 }
 
 .rowAction{
  margin-top: 20px;
 }
 .login_demo{
   padding: 4%;
}
	</ui:style>
<g:HTMLPanel>

<m:MaterialRow backgroundColor="BLUE" addStyleNames="{style.login_demo}">
  <m:MaterialColumn grid="s12 m8 l6" offset="l3" >
   <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
    <m:MaterialPanel addStyleNames="{style.fieldPanel}">
      <m:MaterialTextBox ui:field="nam" label="Event Name" />
		<m:MaterialTextBox ui:field="ven" label="Venue" />
		<m:MaterialTextBox ui:field="date" label="Date" /> 
		<m:MaterialTextBox ui:field="time" label="Time" /> 
		<m:MaterialButton ui:field="b1" text="Create Event" waves="LIGHT" size="LARGE" /> 
     </m:MaterialPanel>
   </m:MaterialPanel>
  </m:MaterialColumn>
 </m:MaterialRow>
	  
	</g:HTMLPanel>
</ui:UiBinder> 