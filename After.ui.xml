<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui" >
	<ui:style>
	.left_menu_title {
   cursor: pointer;
   font-family:Comic Sans MS;
  
}
 .imgProfile{
   margin-top: -120px;
   width: 40%;
   margin-left: 30%;
   cursor: pointer;
   border: 5px solid #fff;
 }
 .panel{
	
  background-color:white;
   background-size: 100%;
   padding: 0px !important;
   padding-top: 20% !important;
 }

 .fieldPanel{
   background: white;
   padding: 6%;
 }
 .imgProfile{
     width:200%;
  height:200%;
   margin-top: -120px;
   margin-left: 10%;
 
   border: 5px solid #fff;
 }
 .rowAction{
  margin-top: 50px;
 }
 .login_demo{
  
	padding: 6%;
	 height:100vh;
	 background: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)),url("Ayurved.jpg");
	 background-size:cover;

	
   
 }
 .f{
	font-size:150px;

	
	}


	</ui:style>
<g:HTMLPanel>


 <m:MaterialRow  addStyleNames="{style.login_demo}">
  <m:MaterialColumn grid="s12 m8 l7" offset="l2" >
  
   <m:MaterialPanel shadow="1"  addStyleNames="{style.panel}">
   <m:MaterialPanel addStyleNames="{style.fieldPanel}">
     <m:MaterialRow addStyleNames="{style.rowAction}">
 <m:MaterialColumn grid="s12 m4">
   <m:MaterialImage url="https://www.achhikhabar.com/wp-content/uploads/2012/08/Ayurvedic-Tips-in-Hindi.jpg" waves="DEFAULT" addStyleNames="{style.imgProfile} z-depth-1" ui:field="lon"/>
   <m:MaterialTitle title="LONG DATA" ui:field="lo" addStyleNames="{style.left_menu_title}"/>
  </m:MaterialColumn>
  
   <m:MaterialColumn grid="s12 m4">
   <m:MaterialImage url="https://www.achhikhabar.com/wp-content/uploads/2012/08/Ayurvedic-Tips-in-Hindi.jpg"  waves="DEFAULT" addStyleNames="{style.imgProfile} z-depth-1" ui:field="event"/>
   <m:MaterialTitle title="CREATE EVENT" ui:field="Event" addStyleNames="{style.left_menu_title}"/>
 </m:MaterialColumn>
   
   <m:MaterialColumn grid="s12 m4">
   <m:MaterialImage url="http://www.eklavyaayurved.in/wp-content/uploads/2017/06/sliderimg11.png" waves="DEFAULT"  addStyleNames="{style.imgProfile} z-depth-1"  ui:field="sum"/>
   <m:MaterialTitle title="SUMMARISED DATA" ui:field="su" addStyleNames="{style.left_menu_title}" />
  </m:MaterialColumn>
   </m:MaterialRow>
  
    </m:MaterialPanel>
   </m:MaterialPanel>
  </m:MaterialColumn>
 </m:MaterialRow>
  
  </g:HTMLPanel>
	
</ui:UiBinder> 